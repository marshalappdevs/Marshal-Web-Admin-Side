#courseTableDiv.panel.panel-primary(ng-controller='coursesCtrl')
    .panelHeading.panel-heading
        button#addCourseButton.btn.btn-success(ng-click='add()', tooltip-placement='top-left', uib-tooltip='הוסף קורס חדש') +
        span קורסים פתוחים
    table.table.table-hover.table-bordered(dir="rtl")
        thead
            tr.coursesTableHead.courseRow.info
                td
                td שם הקורס
                td תיאור
                td מחיר
        tbody#coursesTableBody
            tr.courseRow(ng-repeat='course in courses', style="cursor: pointer; cursor: hand;")
                td.centerAligned
                    button#deleteButton.btn.btn-danger(ng-click='delete(course.id)') -
                td(ng-click='open(course)') {{ course.name }}
                td(ng-click='open(course)') {{ course.desc }}
                td(ng-click='open(course)') {{ course.price }}
    