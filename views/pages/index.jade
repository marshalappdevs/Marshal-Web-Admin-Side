#courseTableDiv.panel.panel-primary(ng-controller='coursesCtrl')
    .panelHeading.panel-heading
        button#addCourseButton.btn.btn-success(ng-click='add()', tooltip-placement='top-left', uib-tooltip='הוסף קורס חדש') +
        span קורסים פתוחים
    table.table.table-hover.table-bordered(dir="rtl")
        thead
            tr.coursesTableHead.courseRow.info
                td
                td שם הקורס
                td תיאור
                td מחיר
        tbody#coursesTableBody
            tr.courseRow(ng-repeat='course in courses', ng-mouseover='isOver = true', ng-mouseleave='isOver = false', style="cursor: pointer; cursor: hand;")
                td.centerAligned.col-md-1
                    button#deleteButton.btn.btn-danger(ng-click='delete(course.id)', ng-show='isOver') -
                td.col-md-2(ng-click='open(course)') {{ course.name }}
                td.col-md-8(ng-click='open(course)') {{ course.desc }}
                td.col-md-1(ng-click='open(course)') {{ course.price }}
    